" --- Configuração do Plugin Vim Vue ---

" Desativa pré-processadores para Vue
let g:vue_disable_pre_processors = 1

" Ativa o carregamento completo da sintaxe para arquivos Vue
let g:vim_vue_plugin_load_full_syntax = 1

" Configurações de indentação
set tabstop=2          " Define o número de espaços que um tabulador ocupa
set shiftwidth=2       " Define o número de espaços que a indentação usa
